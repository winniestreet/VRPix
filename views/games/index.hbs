

{{# each games }}
<div class="row">
  {{# each this }}
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img class="img-responsive" src="{{ this.imagePath }}" alt="...">
      <div class="caption">
        <h3>{{this.title}}</h3>
        <p class="description">{{this.description}}</p>
        <p class="clearfix"><a href="/games/{{this.id}}" class="btn btn-success pull-right" role="button">Rate</a>
      </div>
    </div>
</div>
  {{/each}}

</div>

{{/each}}
